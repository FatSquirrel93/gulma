<div class="column {{#if @first}}is-12{{else}}is-half-tablet{{/if}} {{#if @last}}is-12{{/if}}">
    <article class="card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
        {{#if feature_image}}
            <a class="card-image" href="{{url}}">
                <figure class="image">
                    <div class="post-image" style="background-image: url({{feature_image}})"></div>
                </figure>
            </a>
            {{#if primary_tag}}
                <a class="tag is-primary image-tag-overlay" href="{{primary_tag.name}}">{{primary_tag.name}}</a>
            {{/if}}
        {{else}}
            <div class="card-image">
                <a class="card-image" href="{{url}}">
                    <figure class="image">
                        {{#if primary_tag}}
                            <a class="tag is-primary image-tag" href="{{primary_tag.name}}">{{primary_tag.name}}</a>
                        {{/if}}
                    </figure>
                </a>
            </div>
        {{/if}}
        <a href="{{url}}" class="card-content-link">
            <div class="card-content">

                <p class="title is-4">
                    {{title}}
                </p>
                {{excerpt words="33"}}

            </div>
        </a>
        <footer class="card-footer">
            <div class="card-footer-item level">
                <div class="level-left">
                    {{#foreach authors}}
                        <figure class="image is-32x32 is-marginless">
                            <img class="is-rounded" src="{{profile_image}}">
                        </figure>
                    {{/foreach}}
                </div>
                <div class="level-right">
                    <small>{{reading_time}}</small>
                </div>
            </div>

        </footer>
    </article>
</div>