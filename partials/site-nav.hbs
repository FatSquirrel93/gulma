<div class="navbar-menu" id="navMenu">
    <div class="navbar-start">
        {{^is "home"}}
            {{#if @blog.logo}}
                <a class="site-nav-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"/></a>
            {{else}}
                <a class="site-nav-logo" href="{{@blog.url}}">{{@blog.title}}</a>
            {{/if}}
        {{/is}}
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
    </div>

    <div class="navbar-end">
        {{#if @blog.facebook}}
            <a class="navbar-item" href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">
                <i class="icon fab fa-facebook-square"></i>
                <span>{{@blog.twitter}}</span>
            </a>
        {{/if}}
        {{#if @blog.twitter}}
            <a class="navbar-item" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">
                <i class="icon fab fa-twitter-square"></i>
                <span>{{@blog.twitter}}</span>
            </a>
        {{/if}}
        {{#if @labs.subscribers}}
            <a class="navbar-item" href="#subscribe">
                <i class="icon fas fa-rss-square"></i>
                <span>RSS</span>
            </a>
        {{else}}
            <a class="navbar-item" href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank">
                <i class="icon fas fa-rss-square"></i>
                <span>Feedly</span>
            </a>
        {{/if}}

    </div>
</div>